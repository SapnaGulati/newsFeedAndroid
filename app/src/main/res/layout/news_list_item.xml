<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listCardHeight"
    android:background="@color/whiteColor"
    card_view:cardUseCompatPadding="false"
    android:padding="@dimen/margin_2dp"
    card_view:cardMaxElevation="@dimen/margin_2dp"
    card_view:cardElevation="@dimen/margin_2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_6dp"
        >
        <ImageView
            android:id="@+id/imageview_profile"
            android:layout_width="@dimen/listImageHeight"
            android:layout_height="@dimen/listImageHeight"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/jdpp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/imageview_profile"
            android:paddingLeft="@dimen/padding_12dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Trip To Goa"
                android:textColor="@color/darkGreyText"
                android:textSize="@dimen/textSize_18sp"
                android:fontFamily="sans-serif"
                />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I just returned from Itly, I amnlkshjksajbn ksja  hljsk js us huk jhs hs gcks  us ks a u cjkhs kjh s"
                android:textColor="@color/lightGreyText"
                android:maxLines="2"
                android:layout_marginTop="@dimen/margin_2dp"
                android:textSize="@dimen/textSize_12sp"
                android:alpha="0.5"
                android:fontFamily="sans-serif" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>